<%= notice %>
<div style="width: 80%;" class="mx-auto">
  <% content_for :title, "Invites" %>
  <h1>Invites</h1>

  <%= link_to "New Invite", new_invite_path, class: 'btn btn-success' %>
  <%= link_to "Back to Administrators", root_path, class: 'btn btn-secondary ml-2' %>

  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Date Completion</th>
        <th>Date Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @invites.each do |invite| %>
        <tr>
          <td><%= invite.id %></td>
          <td><%= invite.name %></td>
          <td><%= invite.date_completion&.strftime("%d/%m/%Y") %></td>
          <td><%= invite.created_at.strftime("%d/%m/%Y") %></td>
          <td>
            <div class="d-flex gap-2">
              <%= link_to 'Show', invite, class: 'btn btn-info btn-sm' %> 
              <%= link_to 'Edit', edit_invite_path(invite), class: 'btn btn-warning btn-sm ml-2' %> 
              <%= button_to "Delete", invite, method: :delete, data: { confirm: 'Are you sure you want to delete this invite?' }, class: 'btn btn-danger btn-sm' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
