<%= notice %>
<div style="width: 80%;" class="mx-auto">
  <% content_for :title, "List of Administrators" %>
  <h1>List of Administrators</h1>

  <%= link_to "Companies", companies_path, class: 'btn btn-info ml-2' %>
  <%= link_to "Invites", invites_path, class: 'btn btn-info ml-2' %>

  <table class="table table-striped mt-3">
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Date Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @administrators.each do |admin| %>
        <tr>
          <td><%= admin.id %></td>
          <td><%= admin.email %></td>
          <td><%= admin.created_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td>
            <div class="d-flex gap-2">
              <%= link_to 'Edit', edit_administrator_path(admin), class: 'btn btn-warning btn-sm' %>
              <%= button_to 'Delete', administrator_path(admin), method: :delete, data: { confirm: 'Tem certeza que deseja excluir este administrador?' }, class: 'btn btn-danger btn-sm' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
